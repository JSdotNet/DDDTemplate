<Project>
  <PropertyGroup>
    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
    <CentralPackageTransitivePinningEnabled>true</CentralPackageTransitivePinningEnabled>
    <CentralPackageVersionOverrideEnabled>false</CentralPackageVersionOverrideEnabled>
  </PropertyGroup>
  <ItemGroup>
    <!-- Included in all projects (except Domain) -->
    <PackageVersion Include="Microsoft.ApplicationInsights.AspNetCore" Version="2.21.0" />
    <PackageVersion Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="8.0.0" />
    <PackageVersion Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.0" />
    <PackageVersion Include="Microsoft.Extensions.Diagnostics.HealthChecks" Version="8.0.0" />
    
    <!-- Domain project -->
    <PackageVersion Include="MediatR.Contracts" Version="2.0.1" />
    
    <!-- Application project -->
    <PackageVersion Include="MediatR" Version="12.2.0" />
    <PackageVersion Include="FluentValidation.DependencyInjectionExtensions" Version="11.8.1" />
    <!--TODO Try to make an abstraction so that EntityFrameworkCore is not needed in Application -->
    
    <!-- Infrastructure -->
    <PackageVersion Include="Newtonsoft.Json" Version="13.0.3" />
    
    <!-- Presentation.API project -->
    <PackageVersion Include="AspNetCore.HealthChecks.UI.Client" Version="7.1.0" />
    <PackageVersion Include="Microsoft.AspNetCore.OpenApi" Version="8.0.0" />
    <PackageVersion Include="Swashbuckle.AspNetCore" Version="6.5.0" />
    
    <!-- Launcher project -->
    <PackageVersion Include="Microsoft.ApplicationInsights.SnapshotCollector" Version="1.4.4" />
    
    <!-- Infrastructure.EF project -->
    <PackageVersion Include="Microsoft.EntityFrameworkCore" Version="8.0.0" />
    <PackageVersion Include="Microsoft.EntityFrameworkCore.Design" Version="8.0.0" />
    <PackageVersion Include="Microsoft.EntityFrameworkCore.SqlServer" Version="8.0.0" />
    <PackageVersion Include="Microsoft.EntityFrameworkCore.Tools" Version="8.0.0" />
    <PackageVersion Include="AspNetCore.HealthChecks.SqlServer" Version="7.0.0" />
    <PackageVersion Include="Microsoft.Extensions.Diagnostics.HealthChecks.EntityFrameworkCore" Version="8.0.0" />
    
    <!-- Infrastructure.EF.OutBox project -->
    <PackageVersion Include="Microsoft.Extensions.Configuration.Binder" Version="8.0.0" />
    <PackageVersion Include="Polly" Version="8.2.0" />
    <!-- TODO Review...     
    <PackageVersion Include="Refit.HttpClientFactory" Version="7.0.0" />
    -->
  </ItemGroup>
  
  <!-- Prevent Packages with vulnerabilities -->
  <ItemGroup>
    <!-- System.Net.Http > 4.3.0 -->
    <PackageVersion Include="System.Net.Http" Version="4.3.4" />
    
    <!-- System.Text.RegularExpressions > 4.3.0 -->
    <PackageVersion Include="System.Text.RegularExpressions" Version="4.3.1" />
    
    <!-- System.Drawing.Common > 5.0.0 -->
    <!--<PackageVersion Include="System.Drawing.Common" Version="7.0.0" />-->
  </ItemGroup>
  
  <!-- Prevent Deprecated packages -->
  <ItemGroup>
    <PackageVersion Include="Serilog" Version="3.0.1" />
    <PackageVersion Include="Microsoft.ApplicationInsights" Version="2.21.0" />
    <PackageVersion Include="System.Formats.Asn1" Version="7.0.0" />
  </ItemGroup>
  
  <!-- Test packages-->
  <ItemGroup>
    <PackageVersion Include="xunit" Version="2.6.2" />
    <PackageVersion Include="NSubstitute" Version="5.1.0" />
    <PackageVersion Include="FluentAssertions" Version="6.12.0" />
    <PackageVersion Include="AutoFixture" Version="4.18.1" />
    <PackageVersion Include="Microsoft.NET.Test.Sdk" Version="17.8.0" />
    <PackageVersion Include="NetArchTest.Rules" Version="1.3.2" />
    <PackageVersion Include="Microsoft.AspNetCore.Mvc.Testing" Version="8.0.0" />
    <PackageVersion Include="Respawn" Version="6.1.0" />
    <PackageVersion Include="Testcontainers" Version="3.6.0" />
    <PackageVersion Include="Testcontainers.MsSql" Version="3.6.0" />
    <!-- TODO Review (do I want to use these?)
    <PackageVersion Include="Bogus" Version="34.0.2" />
    <PackageVersion Include="xunit.runner.visualstudio" Version="2.5.0" />
    <PackageVersion Include="coverlet.collector" Version="6.0.0" />-->
  </ItemGroup>
  
  <!-- Test analyzers-->
  <ItemGroup>
    <PackageVersion Include="xunit.analyzers" Version="1.6.0" />
    <PackageVersion Include="FluentAssertions.Analyzers" Version="0.26.0" />
    <PackageVersion Include="NSubstitute.Analyzers.CSharp" Version="1.0.16" />
  </ItemGroup>
</Project>